// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Status {
  OPEN
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Role {
  USER
  ADMIN
}

model Ticket {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(255)
  description String?
  status      Status
  priority    Priority
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  deletedAt   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  firstName String
  lastName  String
  password  String?
  tickets   Ticket[]
  role      Role
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
